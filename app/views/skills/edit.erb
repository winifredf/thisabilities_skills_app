<h1>Edit Your skills Here</h1>

<form method="POST" action="/skills/<%= @skill.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">

    Friend: <br />
    <select name="user_id">
    <% @users.each do |user| %>
        <option value="<%= user.id%>"> <%= user.name %></option>
    <% end %>
    </select><br />
    <br/>


    Skill: <br />
    <input type="text" name="skill"><br />
    <br />
    Skill Definition: <br />
    <textarea name="skill_description"></textarea><br />
    <input type="submit">
</form>